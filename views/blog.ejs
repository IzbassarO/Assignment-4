<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Homepage</title>
    <link rel="stylesheet" href="css/style.css">
    <link href="https://fonts.googleapis.com/css?family=Open+Sans:300,400,700" rel="stylesheet">

    <link rel="stylesheet" href="fonts/icomoon/style.css">
    <link rel="stylesheet" href="css/owl.carousel.min.css">

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="css/bootstrap.min.css">
    
    <!-- Style -->
    <link rel="stylesheet" href="css/style.css">

    <style>
        /* Additional styling can be added here */
        .posts-container {
            display: flex;
            flex-wrap: wrap;
            justify-content: space-around;
        }
        .post {
            margin: 20px;
            padding: 10px;
            background-color: #333;
            color: #fff;
            border-radius: 8px;
        }
        .post img {
            max-width: 100%;
            height: auto;
            display: block;
            margin-bottom: 10px;
        }
        .delete-button {
            color: #ff0000;
            background: none;
            border: none;
            cursor: pointer;
        }
    </style>
</head>
<body>
<header>
    <!-- Navbar -->
    <header class="site-navbar js-sticky-header site-navbar-target" role="banner">

        <div class="container">
          <div class="row align-items-center">
            
            <div class="col-6 col-xl-2">
              <h1 class="mb-0 site-logo"><a href="/">Izbassar<span class="text-primary">.</span> </a></h1>
            </div>
  
            <div class="col-12 col-md-10 d-none d-xl-block">
              <nav class="site-navigation position-relative text-right" role="navigation">
  
                <ul class="site-menu main-menu js-clone-nav mr-auto d-none d-lg-block">
                    <li><a href="" class="nav-link"></a></li>
                    <li class="has-children">
                      <a href="/" class="nav-link"><%= translations.home %></a>
                    </li>
                    <% if (isAdmin) { %>
                      <li class="has-children">
                          <a href="/admin" class="nav-link"><%= translations.admin %></a>
                      </li>
                  <%} else { %>
      
                  <% } %>
                  <li class="has-children">
                      <a href="/blog" class="nav-link"><%= translations.blog %></a>
                  </li>
                  
                  <select name="language" id="language" onchange="changeLanguage(this.value)">
                      <option value="en" <%= language === 'en' ? 'selected' : '' %>>English</option>
                      <option value="ru" <%= language === 'ru' ? 'selected' : '' %>>Russian</option>
                  </select>


                      <li class="has-children">
                          <a href="/logout" class="nav-link"><%= translations.logout %></a>
                      </li>
                  </ul>
              </nav>
            </div>
  
  
            <div class="col-6 d-inline-block d-xl-none ml-md-0 py-3" style="position: relative; top: 3px;"><a href="#" class="site-menu-toggle js-menu-toggle float-right"><span class="icon-menu h3"></span></a></div>
  
          </div>
        </div>
        
      </header>
    <!-- Navbar -->
    <!-- Carousel wrapper -->
    <div id="introCarousel" class="carousel slide carousel-fade shadow-2-strong" data-mdb-carousel-init>
        <!-- Indicators -->
        <div class="carousel-indicators">
          <li data-mdb-target="#introCarousel" data-mdb-slide-to="0" class="active"></li>
          <li data-mdb-target="#introCarousel" data-mdb-slide-to="1"></li>
          <li data-mdb-target="#introCarousel" data-mdb-slide-to="2"></li>
        </div>
    
        <!-- Inner -->
        <div class="carousel-inner">
          <!-- Single item -->
          <div class="carousel-item active">
            <div class="mask" style="background-color: rgba(0, 0, 0, 0.6);">
              <div class="d-flex justify-content-center align-items-center h-100">
                <div class="text-white text-center" data-mdb-theme="dark">
                  <br><br><br>
                  <h2><%= translations.blog %></h2>
                </div>
              </div>
            </div>
          </div>
    </header>
    <main>
    <div class="container">
        <!-- Admin Add Post Button -->
        <div class="button-container">
            <% if (isAdmin) { %>
                <button id="addPostBtn" onclick="location.href='/addPost'"><%= translations.add_post %></button>
            <% } %>
        </div>

        <!-- Posts Display -->
        <div class="posts-container">
            <% posts.forEach(function(post) { %>
                <div class="post">
                    <img src="/images/<%= post._id %>/image1" alt="Image 1">
                    <img src="/images/<%= post._id %>/image2" alt="Image 2">
                    <img src="/images/<%= post._id %>/image3" alt="Image 3">
                    <h2><%= language === 'en' ? post.name_en : post.name_ru %></h2>
                    <p><%= language === 'en' ? post.description_en : post.description_ru %></p>
                <% if (isAdmin) { %>
                    <!-- Delete Post Form -->
                    <form action="/admin/delete-post/<%= post._id %>" method="post">
                        <button type="submit" class="delete-button">Delete</button>
                    </form>
                    <% } %>
                </div>
                <% }); %>
            </div>
        </div>
    </main>

    <!--Footer-->
  <footer class="bg-light text-lg-start">
    <hr class="m-0" />
  
    <div class="text-center py-4 align-items-center">
      <p>Follow on social media</p>
      <a href="" class="btn btn-primary m-1" role="button" 
         rel="nofollow" target="_blank">
        <i class="fab fa-youtube"></i>
      </a>
      <a href="" class="btn btn-primary m-1" role="button" rel="nofollow" 
         target="_blank">
        <i class="fab fa-facebook-f"></i>
      </a>
      <a href="" class="btn btn-primary m-1" role="button" rel="nofollow" 
         target="_blank">
        <i class="fab fa-twitter"></i>
      </a>
      <a href="" class="btn btn-primary m-1" role="button" rel="nofollow" 
         target="_blank">
        <i class="fab fa-github"></i>
      </a>
    </div>
  
    <!-- Copyright -->
    <div class="text-center p-3" style="background-color: rgba(0, 0, 0, 0.2);">
      Â© 2024 Izbassar Orynbassar SE-2202
      <a class="text-dark" href="https://www.instagram.com/1zbassar/">Izbassar</a>
    </div>
    <!-- Copyright -->
  </footer>
